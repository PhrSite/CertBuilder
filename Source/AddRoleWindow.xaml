<Window x:Class="CertBuilder.AddRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertBuilder"
        mc:Ignorable="d"
        Title="Add New Roles" Height="600" Width="500" FontSize="16"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <StackPanel Orientation="Vertical" Margin="10">
        <ListBox Name="rolesListBox" DockPanel.Dock="Top" Height="500" ItemsSource="{Binding Path=Roles}"
            SelectionMode="Multiple" IsSynchronizedWithCurrentItem="False"></ListBox>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="0,10,0,0 ">
            <Button Content="OK" Click="OnOk"></Button>
            <Button Content="Add Custom Role" Margin="10,0,0,0" Click="OnAddCustom"></Button>
            <Button Content="Cancel" Click="OnCancel" Margin="10,0,0,0"></Button>
        </StackPanel>
    </StackPanel>
</Window>
