<Window x:Class="CertBuilder.AddCustomRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertBuilder"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" FontSize="16" ResizeMode="NoResize"
        Title="Add A Custom Role" Height="146" Width="354" ShowInTaskbar="False">
    <StackPanel Orientation="Vertical" Margin="10">
        <StackPanel Orientation="Horizontal">
            <Label Content="Custom Role:"></Label>
            <TextBox Width="200" Name="CustomRole"></TextBox>       
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="5,20,0,0">
            <Button Content="OK" Click="OnOkClicked" IsDefault="True"></Button>
            <Button Content="Cancel" Margin="10,0,0,0" Click="OnCancelClicked"></Button>
        </StackPanel>
    </StackPanel>
</Window>
